{
  "manifest_version": 2,
  "name": "Page refresher",
  "version" : "3.0.0",
  "author": "Sereda Vladislav",

  "icons": {
    "128": "refreshIcon.png"
  },

  "applications": {
    "gecko": {
      "id": "demo-runtime.connect-and-storage.local@example.com",
      "strict_min_version": "48.0a1"
    }
  },

  "content_scripts" : [
    {
      "matches": ["*://*/*"],
      "js": ["./assets/content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'",
  "background" : {
    "page": "background.html"
  },

  "options_page" : "settings.html",

  "browser_action": {
    "default_icon": {
      "32": "refreshIcon.png"
    },
    "default_title": "Refresh page",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html"
  },

  "permissions": [
    "https://code.jquery.com/*",
    "tabs",
    "storage",
    "*://*/*",
    "unlimitedStorage"
  ]
}